{
	"compilerOptions": {
		"allowJs": true,
		"target": "es6",
		"module": "commonjs",
		"moduleResolution": "node",
		"resolveJsonModule": true,
		"outDir": "dist",
		"typeRoots": [
			"./src/@types",
			"./node_modules/@types",
		],
		"esModuleInterop": true
	},
	"exclude": [
		"node_modules",
		"dist",
	]
}